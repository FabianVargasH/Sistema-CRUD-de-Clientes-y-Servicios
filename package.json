{
  "name": "sistema-servicios",
  "version": "1.0.0",
  "description": "Sistema de Gesti√≥n de Servicios",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.sistema.servicios",
    "productName": "Sistema de Servicios",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "database.js",
      "preload.js",
      "database.sqlite",
      "public/**/*",
      "node_modules/**/*",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema de Servicios"
    }
  }
}